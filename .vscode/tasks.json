{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C: build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-Wall",
        "-Wextra",
        "-O2",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lm"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
